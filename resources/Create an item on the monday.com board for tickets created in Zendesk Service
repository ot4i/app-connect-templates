      actions:
        CREATE: {}
  assemblies:
    assembly-1:
      assembly:
        execute:
          - retrieve-action:
              name: monday.com Retrieve groups
              target:
                $ref: '#/integration/action-interfaces/action-interface-3'
              filter:
                where:
                  board_id: '3022697917'
